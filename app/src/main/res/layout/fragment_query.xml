<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/airplanemenulogo"
    android:fitsSystemWindows="true"
    tools:context=".queryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/titleQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ΑΠΟΤΕΛΕΣΜΑΤΑ QUERY"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_margin="12dp"
        android:textSize="23dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/txtQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Περιγραφή Query"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_margin="12dp"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/queryRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#72D8FF"
        android:text="ΕΚΤΕΛΕΣΗ"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtQueryResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Αποτελέσματα Query"
                android:layout_margin="24dp"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </ScrollView>

    </LinearLayout>

</LinearLayout>